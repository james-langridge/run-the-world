# Database Configuration
# For local development with Docker: use the local database
# For production: use your production database URL
DATABASE_URL="postgresql://runtheworld:localdev@localhost:5432/runtheworld?schema=public"

# Strava OAuth Configuration
STRAVA_CLIENT_ID=your_client_id_here
STRAVA_CLIENT_SECRET=your_client_secret_here
STRAVA_REDIRECT_URI=http://localhost:3000/auth/callback

# Mock Data for Local Development
# Set to 'true' to use mock Strava API data (bypasses rate limits)
# When using mocks, make sure you're using the local database to avoid polluting production data
NEXT_PUBLIC_USE_MOCKS=false
